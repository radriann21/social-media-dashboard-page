---
import ToggleTheme from "./ToggleTheme.astro";
import ListOfInfoCards from "./ListOfInfoCards.astro";
import data from "../data.json";

const { totalFollowers, totalInfo } = data;
---

<section class="w-full h-fit">
  <div class="w-full flex flex-col md:flex-row md:items-center justify-between">
    <div>
      <h1 class="font-bold font-global text-xl md:text-3xl">
        Social Media Dashboard
      </h1>
      <p
        class="font-semibold text-light-dark-grayish-blue dark:text-dark-desaturated-blue"
      >
        Total Followers: {totalFollowers.toLocaleString()}
      </p>
    </div>

    <span class="flex items-center md:hidden my-4 md:my-0">
      <span
        class="h-px flex-1 bg-light-dark-grayish-blue dark:bg-dark-desaturated-blue"
      ></span>
    </span>

    <div>
      <ToggleTheme />
    </div>
  </div>

  <ListOfInfoCards totalInfo={totalInfo} />
</section>
